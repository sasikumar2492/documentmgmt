{
  "info": {
    "name": "Pharma DMS API",
    "description": "REST API for Pharma Document Management System. Base URL: {{baseUrl}}. After login, use the token in Authorization (Bearer) for other requests.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000/api" },
    { "key": "token", "value": "" },
    { "key": "requestId", "value": "" },
    { "key": "templateId", "value": "" },
    { "key": "documentId", "value": "" },
    { "key": "workflowId", "value": "" },
    { "key": "ruleId", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const json = pm.response.json();",
                  "    if (json.token) {",
                  "        pm.collectionVariables.set('token', json.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"your-password\"\n}"
            },
            "url": "{{baseUrl}}/auth/login",
            "description": "Authenticate and get JWT. Saves token to collection variable for other requests."
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/auth/me",
            "description": "Get current user profile. Requires Bearer token."
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/auth/refresh",
            "description": "Re-issue JWT. Requires valid Bearer token."
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\"\n}"
            },
            "url": "{{baseUrl}}/auth/forgot-password",
            "description": "Request password reset. Body: username."
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"<reset-token>\",\n  \"newPassword\": \"newPassword123\"\n}"
            },
            "url": "{{baseUrl}}/auth/reset-password",
            "description": "Reset password with token from forgot-password."
          }
        }
      ]
    },
    {
      "name": "Dashboard",
      "item": [
        {
          "name": "Get Dashboard Summary",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/dashboard/summary?limit=10&days=&department_id=&assigned_to=",
              "host": ["{{baseUrl}}"],
              "path": ["dashboard", "summary"],
              "query": [
                { "key": "limit", "value": "10", "disabled": true },
                { "key": "days", "value": "7", "disabled": true },
                { "key": "department_id", "value": "", "disabled": true },
                { "key": "assigned_to", "value": "", "disabled": true }
              ]
            },
            "description": "Request counts by status, recent requests, recent templates."
          }
        }
      ]
    },
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "url": "{{baseUrl}}/health",
            "description": "Service health check. No auth required."
          }
        }
      ]
    },
    {
      "name": "Departments",
      "item": [
        {
          "name": "List Departments",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/departments",
            "description": "List all departments."
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/users",
            "description": "List users (for assignee/reviewer selection)."
          }
        }
      ]
    },
    {
      "name": "Templates",
      "item": [
        {
          "name": "List Templates",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/templates?department_id=&status=",
              "host": ["{{baseUrl}}"],
              "path": ["templates"],
              "query": [
                { "key": "department_id", "value": "", "disabled": true },
                { "key": "status", "value": "draft", "disabled": true }
              ]
            },
            "description": "List templates. Optional query: department_id, status (draft|approved)."
          }
        },
        {
          "name": "Get Template by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/templates/{{templateId}}",
            "description": "Get single template. Set templateId in collection variables."
          }
        },
        {
          "name": "Get Template File",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/templates/{{templateId}}/file",
            "description": "Download template file (binary)."
          }
        },
        {
          "name": "Get Template Download (Presigned URL)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/templates/{{templateId}}/download?expiresIn=3600",
              "host": ["{{baseUrl}}"],
              "path": ["templates", "{{templateId}}", "download"],
              "query": [{ "key": "expiresIn", "value": "3600" }]
            },
            "description": "When template is in S3, returns { downloadUrl, expiresAt }. Otherwise 404."
          }
        },
        {
          "name": "Upload Template",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file", "src": "", "description": "Word/Excel/PDF file" },
                { "key": "department_id", "value": "", "type": "text", "disabled": true }
              ]
            },
            "url": "{{baseUrl}}/templates",
            "description": "Upload template. multipart/form-data: file (required), department_id (optional)."
          }
        },
        {
          "name": "Update Template",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"approved\",\n  \"parsed_sections\": []\n}"
            },
            "url": "{{baseUrl}}/templates/{{templateId}}",
            "description": "Update template. Body: file_name, department_id, status, parsed_sections (all optional)."
          }
        }
      ]
    },
    {
      "name": "Requests",
      "item": [
        {
          "name": "List Requests",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/requests?department_id=&status=",
              "host": ["{{baseUrl}}"],
              "path": ["requests"],
              "query": [
                { "key": "department_id", "value": "", "disabled": true },
                { "key": "status", "value": "draft", "disabled": true }
              ]
            },
            "description": "List requests. Optional: department_id, status."
          }
        },
        {
          "name": "Get Request by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/requests/{{requestId}}",
            "description": "Get single request. Set requestId (UUID) in collection variables."
          }
        },
        {
          "name": "Get Request Activity",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/requests/{{requestId}}/activity",
            "description": "Audit log entries for this request."
          }
        },
        {
          "name": "Create Request",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const json = pm.response.json();",
                  "    if (json.id) pm.collectionVariables.set('requestId', json.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"template_id\": \"{{templateId}}\",\n  \"title\": \"Test Request\",\n  \"department_id\": null\n}"
            },
            "url": "{{baseUrl}}/requests",
            "description": "Create request from template. template_id required. Saves requestId to collection."
          }
        },
        {
          "name": "Get Request Workflow",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/requests/{{requestId}}/workflow",
            "description": "Get workflow instance and steps for a request (runtime)."
          }
        },
        {
          "name": "Post Request Workflow Action",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"approve\",\n  \"comment\": \"Approved for release\"\n}"
            },
            "url": "{{baseUrl}}/requests/{{requestId}}/workflow/actions",
            "description": "Action: init, set_workflow, approve, reject, request_revision. For init/set_workflow add workflow_id, ai_generated_definition."
          }
        },
        {
          "name": "Update Request",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"submitted\",\n  \"assigned_to\": null,\n  \"reviewSequence\": [],\n  \"priority\": \"medium\",\n  \"submissionComments\": null\n}"
            },
            "url": "{{baseUrl}}/requests/{{requestId}}",
            "description": "Update request. Body: title, status, assigned_to, review_sequence/reviewSequence, priority, submission_comments (all optional)."
          }
        }
      ]
    },
    {
      "name": "Form Data",
      "item": [
        {
          "name": "Get Form Data",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/requests/{{requestId}}/form-data",
            "description": "Get form data for a request. :id is request UUID."
          }
        },
        {
          "name": "Put Form Data",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {},\n  \"formSectionsSnapshot\": null\n}"
            },
            "url": "{{baseUrl}}/requests/{{requestId}}/form-data",
            "description": "Create or update form data. Body: data (object), formSectionsSnapshot (optional)."
          }
        }
      ]
    },
    {
      "name": "Documents",
      "item": [
        {
          "name": "List Documents",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/documents?request_id=&status=&department_id=",
              "host": ["{{baseUrl}}"],
              "path": ["documents"],
              "query": [
                { "key": "request_id", "value": "", "disabled": true },
                { "key": "status", "value": "", "disabled": true },
                { "key": "department_id", "value": "", "disabled": true }
              ]
            },
            "description": "List documents. Optional: request_id, status, department_id."
          }
        },
        {
          "name": "Get Document by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/documents/{{documentId}}",
            "description": "Get single document."
          }
        },
        {
          "name": "Get Document File",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/documents/{{documentId}}/file",
            "description": "Download document file (binary)."
          }
        },
        {
          "name": "Upload Document",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const json = pm.response.json();",
                  "    if (json.id) pm.collectionVariables.set('documentId', json.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file", "src": "", "description": "PDF, DOCX, or XLSX" },
                { "key": "request_id", "value": "{{requestId}}", "type": "text", "disabled": true }
              ]
            },
            "url": "{{baseUrl}}/documents",
            "description": "Upload document. multipart: file (required), request_id (optional). Saves documentId to collection."
          }
        },
        {
          "name": "Update Document",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"approved\"\n}"
            },
            "url": "{{baseUrl}}/documents/{{documentId}}",
            "description": "Update document. Body: status (required)."
          }
        }
      ]
    },
    {
      "name": "Audit Logs",
      "item": [
        {
          "name": "List Audit Logs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/audit-logs?entity_type=&entity_id=&user_id=&request_id=&date_range=&from_date=&to_date=&limit=100",
              "host": ["{{baseUrl}}"],
              "path": ["audit-logs"],
              "query": [
                { "key": "entity_type", "value": "request", "disabled": true },
                { "key": "entity_id", "value": "", "disabled": true },
                { "key": "user_id", "value": "", "disabled": true },
                { "key": "request_id", "value": "", "disabled": true },
                { "key": "date_range", "value": "week", "disabled": true, "description": "today|week|month" },
                { "key": "from_date", "value": "", "disabled": true },
                { "key": "to_date", "value": "", "disabled": true },
                { "key": "limit", "value": "100", "disabled": true }
              ]
            },
            "description": "List audit logs. Query: entity_type, entity_id, user_id, request_id, date_range (today|week|month), from_date, to_date, limit (default 100, max 500)."
          }
        }
      ]
    },
    {
      "name": "Workflows",
      "item": [
        {
          "name": "List Workflows",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/workflows?template_id=&department_id=&is_active=",
              "host": ["{{baseUrl}}"],
              "path": ["workflows"],
              "query": [
                { "key": "template_id", "value": "", "disabled": true },
                { "key": "department_id", "value": "", "disabled": true },
                { "key": "is_active", "value": "true", "disabled": true }
              ]
            },
            "description": "List workflow definitions. Optional: template_id, department_id, is_active."
          }
        },
        {
          "name": "Create Workflow",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Standard Approval\",\n  \"description\": \"Default approval process\",\n  \"is_active\": true\n}"
            },
            "url": "{{baseUrl}}/workflows",
            "description": "Create workflow. Body: name, description, is_active, applies_to_template_id, applies_to_department_id."
          }
        },
        {
          "name": "Get Workflow by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/workflows/{{workflowId}}",
            "description": "Get single workflow. Set workflowId in collection variables."
          }
        },
        {
          "name": "Get Workflow Steps",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/workflows/{{workflowId}}/steps",
            "description": "List steps for a workflow."
          }
        },
        {
          "name": "Update Workflow Steps",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "[\n  { \"step_order\": 0, \"name\": \"Initial Review\", \"role_key\": \"reviewer\", \"is_approval_step\": true },\n  { \"step_order\": 1, \"name\": \"Approval\", \"role_key\": \"approver\", \"is_approval_step\": true }\n]"
            },
            "url": "{{baseUrl}}/workflows/{{workflowId}}/steps",
            "description": "Replace all steps. Body: array of { step_order, name, role_key, department_id, is_approval_step, metadata }."
          }
        },
        {
          "name": "Update Workflow",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Standard Approval\",\n  \"is_active\": true\n}"
            },
            "url": "{{baseUrl}}/workflows/{{workflowId}}",
            "description": "Update workflow. Body: name, description, is_active, applies_to_template_id, applies_to_department_id."
          }
        }
      ]
    },
    {
      "name": "Workflow Rules",
      "item": [
        {
          "name": "List Workflow Rules",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/workflow-rules?template_id=&department_id=&is_active=",
              "host": ["{{baseUrl}}"],
              "path": ["workflow-rules"],
              "query": [
                { "key": "template_id", "value": "", "disabled": true },
                { "key": "department_id", "value": "", "disabled": true },
                { "key": "is_active", "value": "true", "disabled": true }
              ]
            },
            "description": "List workflow rules. Optional: template_id, department_id, is_active."
          }
        },
        {
          "name": "Create Workflow Rule",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Default workflow for QA\",\n  \"description\": \"Apply standard workflow for QA department\",\n  \"applies_to_department_id\": null,\n  \"condition_json\": {},\n  \"action_json\": {},\n  \"is_active\": true\n}"
            },
            "url": "{{baseUrl}}/workflow-rules",
            "description": "Create workflow rule. Body: name, description, applies_to_template_id, applies_to_department_id, condition_json, action_json, is_active."
          }
        },
        {
          "name": "Get Workflow Rule by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/workflow-rules/{{ruleId}}",
            "description": "Get single workflow rule."
          }
        },
        {
          "name": "Update Workflow Rule",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_active\": false\n}"
            },
            "url": "{{baseUrl}}/workflow-rules/{{ruleId}}",
            "description": "Update workflow rule."
          }
        }
      ]
    }
  ]
}
